<p id="notice"><%= notice %></p>

<h1>Idols</h1>

<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Talent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @idols.each do |idol| %>
      <tr>
        <td><%= idol.last_name %></td>
        <td><%= idol.first_name %></td>
        <td><%= idol.talents.last.description if idol.talents.any? %></td>
        <td><%= link_to 'Show', idol %></td>
        <td><%= link_to 'Edit', edit_idol_path(idol) %></td>
        <td><%= link_to 'Destroy', idol, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Run a backup', run_a_cmd_idols_path %>
<%= link_to 'New Idol', new_idol_path %>
<%= link_to 'Shyshyshy.pdf', idols_path(format: 'pdf') %>
